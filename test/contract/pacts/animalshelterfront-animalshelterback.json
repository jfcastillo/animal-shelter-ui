{
  "consumer": {
    "name": "AnimalShelterFront"
  },
  "provider": {
    "name": "AnimalShelterBack"
  },
  "interactions": [
    {
      "description": "a request to get all animals",
      "providerState": "there are animals",
      "request": {
        "method": "GET",
        "path": "/animals"
      },
      "response": {
        "status": 200,
        "headers": {
        },
        "body": [
          {
            "name": "Manchas",
            "breed": "Bengali",
            "gender": "Female",
            "vaccinated": true
          }
        ],
        "matchingRules": {
          "$.body": {
            "min": 1
          },
          "$.body[*].*": {
            "match": "type"
          },
          "$.body[*].name": {
            "match": "type"
          },
          "$.body[*].breed": {
            "match": "type"
          },
          "$.body[*].gender": {
            "match": "type"
          },
          "$.body[*].vaccinated": {
            "match": "type"
          }
        }
      }
    },
    {
      "description": "a request to remove an animal",
